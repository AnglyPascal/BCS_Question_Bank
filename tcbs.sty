\declaretheoremstyle[
	headfont=\bfseries,
	headpunct={\ :},
	postheadspace={7pt},
	spaceabove=50pt,
	spacebelow=10pt,
	notebraces={(}{)},
]{problemstyle}

\declaretheorem[style=problemstyle, numberwithin=section]{problem}
\declaretheorem[style=problemstyle, title=Problem]{problem_0}
\declaretheorem[style=problemstyle, numberwithin=problem]{generalization}


\declaretheoremstyle[
	headfont=\bfseries\rmfamily\color{Magenta},
	headpunct={ \color{black}\textbf{---} },
	postheadspace={0pt},
	spaceabove=25pt,
	spacebelow=15pt,
	notebraces={}{},
	notefont=\color{black}\textbf{\rmfamily\normalfont},
	bodyfont=\rmfamily,
]{theoremstyle}


\newtcbtheorem[use counter=theorem, number within=section]{BoxedTheorem}{\rmfamily Theorem}{
	colback=Magenta!5!white,
	colframe=Magenta, fonttitle=\bfseries\rmfamily,
	colbacktitle=white,
	boxrule=.15em,
	coltitle=Magenta,
	top=15pt, left=10pt, right=5pt, bottom=10pt,
	enhanced,
	boxed title style={colframe=white},
	attach boxed title to top left={xshift=10pt, yshift=-12pt},
	separator sign={},
}{boxedtheorem}

\declaretheorem[style=theoremstyle, numberwithin=section]{theorem}
\declaretheorem[style=theoremstyle, numberwithin=section]{proposition}
\declaretheorem[style=theoremstyle, numberwithin=theorem]{corollary}
\declaretheorem[style=theoremstyle, sibling=theorem]{lemma}

\tcolorboxenvironment{theorem}{
	blanker,
	breakable, 
	left=1em,
	before skip=40pt,
	after skip=20pt,
	colback=magenta!5,
	borderline west={.2em}{0pt}{magenta},
}



\declaretheoremstyle[
	headfont=\bfseries\sffamily\color{ForestGreen},
	bodyfont=\normalfont,
	spaceabove=25pt,
	spacebelow=15pt,
	headpunct={ --- },
]{definitionstyle}

\declaretheorem[style=definitionstyle, numbered=no]{definition}
\declaretheorem[style=definitionstyle, numbered=no, name=Data Structure]{data_structure}
\declaretheorem[style=definitionstyle, numbered=no, name=Algorithm]{algo}
\declaretheorem[style=definitionstyle, numbered=no, name=Game]{game}
\declaretheorem[style=definitionstyle, name=Construction]{construction}



